@model OEconomicoPessoal.Entidades.Receita

@{
    ViewBag.Title = "Nova Receita";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/receitas/novareceita">Receitas</a>
    </li>
    <li class="breadcrumb-item active">Nova Receita</li>
</ol>

<div class="card mx-auto mt-auto">
    <div class="card-header">Adicionar nova receita </div>

    <div class="panel panel-success">

        @*<div class="panel-heading">
                <div class="alert alert-success">
                    <h4 class="text-lg-left">Adicionar Nova Receita</h4>
                </div>
            </div>*@

        @using (Html.BeginForm("novareceita", "receitas", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <br />
            <div class="container row">

                <div class="form-group col-md-2">
                    <label class="col-form-label" for="valor">Valor</label>
                    <input type="text" class="form-control" id="valor" name="valor" required />
                </div>

                <div class="form-group col-md-3">
                    <label class="col-form-label" for="tiporeceita">Categoria</label>
                    <select class="form-control" id="tiporeceita" name="tiporeceita">
                        <option value="-1">Selecione ...</option>
                        @foreach (var item in ViewBag.tiporeceitas)
                        {
                            <option value="@item.Id">@item.Descricao</option>
                        }

                        @*<option value="1">Salário</option>
                            <option value="2">Uber</option>
                            <option value="3">Aluguel de Imovél</option>
                            <option value="4">Outros</option>*@
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label class="col-form-label" for="data">Data</label>
                    <input type="date" class="form-control" id="data" name="data" required />
                </div>
                <div class="form-group col-md-4">
                    <label class="col-form-label" for="`descricao">Descrição</label>
                    <input type="text" class="form-control" id="descricao" name="descricao" required />
                </div>
            </div>

            <div class="container row">

                <div class="form-group col-md-4">
                    <label class="col-form-label" for="conta">Conta</label>
                    <select class="form-control" id="conta" name="conta">
                        <option value="-1">Selecione...</option>
                        @foreach (var item in ViewBag.contas)
                        {
                            <option value="@item.Id">@item.Descricao</option>
                        }
                    </select>
                </div>

                <div class="form-group col-md-4">
                    <label class="col-form-label" for="pagamento">Forma Pagamento</label>
                    <select class="form-control" id="pagamento" name="pagamento">
                        <option value="-1">Selecione ...</option>
                        @foreach (var item in ViewBag.formapagamento)
                        {
                            <option value="@item.Id">@item.Descricao</option>
                        }
                        @*<option value="1">Cartão de Crédito</option>
                            <option value="2">Cartão de Débito</option>
                            <option value="3">Dinheiro</option>
                            <option value="4">Cheques</option>
                            <option value="5">Conta Corrente</option>
                            <option value="6">Outros</option>*@
                    </select>
                </div>

                <div class="form-group col-md-4">
                    <label class="col-form-label">Anexo</label>
                    <input type="file" title="Selecione um arquivo" class="form-control" id="file" name="file" />
                </div>

            </div>

            <div class="container row">
                <div class="form-group col-md-4">
                    <input type="submit" value="Salvar Receita" formmethod="post" class="btn btn-lg btn-success" />
                </div>
            </div>

        }
    </div>

    @Html.Partial("_MensagemErroPartial")
    @Html.Partial("_MensagemSucessoPartial")
</div>
   
