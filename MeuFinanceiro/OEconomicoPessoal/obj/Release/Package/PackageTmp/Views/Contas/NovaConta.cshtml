        @using (Html.BeginForm("novaconta", "contas", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <br />
            <div class="container row">
                <div class="form-group col-md-4">
                    <label class="col-form-label" for="`descricao">Descrição</label>
                    <input type="text" class="form-control" id="descricao" name="descricao" required />
                </div>
                <div class="form-group col-md-3">
                    <label class="col-form-label" for="valor">Valor Inicial</label>
                    <input type="text" class="form-control" id="valor" name="valor" required />
                </div>

            </div>

            <div class="container row">
                <div class="form-group col-md-4">
                    <input type="submit" value="Salvar Conta" formmethod="post" class="btn btn-lg btn-success" />
                </div>
            </div>
        }
    </div>
</div>

   

